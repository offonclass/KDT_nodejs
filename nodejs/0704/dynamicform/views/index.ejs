<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body>
    <form name="register-form">
        <label for="name">이름</label>
        <input type="text" id="username" required /><br />
        <label for="email">이메일</label>
        <input type="email" id="email" required /><br /><br />
        <button type="button" onclick="ajaxGet()">ajax get 제출</button><br />
        <button type="button" onclick="ajaxPost()">ajax post 제출</button><br />
        <button type="button" onclick="axiosGet()">axios get 제출</button><br />
        <button type="button" onclick="axiosPost()">axios post 제출</button><br />
        <button type="button" onclick="fetchGet()">fetch get 제출</button><br />
        <button type="button" onclick="fetchPost()">fetch post 제출</button><br />

    </form>
    <div class="result"></div>


    <script>
        const resultBox = document.querySelector('.result')
        function ajaxGet() {
            // 폼가져오기
            const form = document.forms['register-form']
            // 백엔드로 보내는 데이터
            const data = {
                name: form.username.value,
                email: form.email.value
            };

            console.log(data);
            // ajax
            $.ajax({
                type: "GET",
                url: '/ajax',
                data: data,
                success: (res) => {
                    console.log('res : ', res);
                    resultBox.textContent = `${res.user} ${res.email}`; //.textContent가 뭐지..?
                }
            });
        };

        function ajaxPost() {
            // 폼 가져오기
            const form = document.forms['register-form']
            if (form.username.value === '') {
                alert('이름을 입력하세요');
                return;
            }
            $.ajax({
                type: "POST",
                url: '/ajax',
                data: {
                    name: form.username.value,
                    email: form.email.value
                },
                // 이부분에서 비동기를 확인한다
                success: (res) => {
                    console.log('res: ', res);
                    resultBox.textContent = `${res.user} ${res.email}`; //.textContent가 뭐지..?

                }
            })
        }

        function axiosGet() {
            const form = document.forms['register-form']
            const data = {
                name: form.username.value,
                email: form.email.value
            }
            axios({
                method: 'get',
                // url: `/axios?name=${form.username.value}&email=${form.email.value}`
                url: '/axios',
                params: data //get방식일떄는 params
            }).then((res) => {
                console.log('res: ', res);
                const { result, name, email } = res.data;
                if (result) {
                    resultBox.textContent = `${name}님 이메일주소는 ${email}`
                } else {
                    resultBox.textContent = '오류가 생성되었습니다.'
                }
            });
        }


        async function axiosPost() {
            const data = {
                name: document.querySelector("#username").value,
                email: document.querySelector("#email").value
            };

            const res = await axios({
                method: 'POST',
                url: '/axios',
                data,
            })

            console.log('res:',res);
            resultBox.textContent = `${res.data.name}님 이메일 주소는 ${res.data.email}입니다.`
        }

            function fetchGet() {
                const username = document.querySelector("#username").value
                const email = document.querySelector("#email").value
                const url = `?username=${username}&email=${email}`
                // fetch?username~~~~
                fetch(`/fetch${url}`, {
                    method: 'get'
                }).then((res) => {
                    console.log('res : ', res);
                    return res.json();
                }).then((data) => {
                    console.log('data', data);
                    resultBox.textContent = `${data.username}님 이메일 주소는 ${data.email}입니다.`
                });
            }

            async function fetchPost() {
                const data = {
                    username: document.querySelector("#username").value,
                    email: document.querySelector("#email").value

                }

                const res = await fetch('/fetch',{
                    method: 'post',
                    body: JSON.stringify(data),
                    headers: {
                        'Content-Type': 'application/json'
                    }

                })
                console.log('res : ',res);
                const result = await res.json();
                console.log('result : ',result);
                resultBox.textContent = `${result.username}님 이메일 주소는 ${result.email}입니다.`
            }


    </script>
</body>

</html>