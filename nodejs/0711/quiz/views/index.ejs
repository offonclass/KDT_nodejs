<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
</head>

<body>
    <h3>로그인 하세요</h3>
    <form>
        <input type="text" id="userid" placeholder="아이디" /><br />
        <input type="password" id="pw" placeholder="비밀번호" /><br />
        <button type="button" onclick="loginFunc()">로그인</button>
        <a href="/signup">회원가입</a>
    </form>
    <div class="resultBox"></div>

    <script>
        const resultBox = document.querySelector('.resultBox');
        async function loginFunc() {
            const userid = document.querySelector('#userid').value;
            const pw = document.querySelector('#pw').value;
            const data = { userid, pw }
            console.log(data);

            const res = await axios({
                method: 'post',
                url: '/api/user/login',
                data,
            })
            console.log('res', res.data);
            if (res.data.id === 1) {
                window.location.href = `/admin`
            } else if(res.data && res.data.id !== 1) {
                window.location.href = `/info/${res.data.id}`
            } else {
                resultBox.innerHTML = `<p>로그인에 실패했습니다. 아이디와 비밀번호를 확인하세요.</p>`
            }
        }


    </script>

</body>

</html>