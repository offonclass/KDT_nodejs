<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
</head>
<body>
    <h3>사용자 리스트</h3>
    <ul>
        <% for(let i=0; i < users.length; i++) { %>
            <li>
                <span>이름 : <%= users[i].name %></span>
                <span>성별 : <%= users[i].gender %></span>
                <span>전공 : <%= users[i].major %></span>
            </li>
        <% } %>
    </ul>
    <br />
    <form>
        <input type="text" id="username" placeholder="이름" /><br />
        <input type="text" id="gender" placeholder="성별" /><br />
        <input type="text" id="major" placeholder="전공" /><br />
        <button type="button" onclick="registerFunc()">등록</button>
    </form>
    <script>
        function registerFunc() {
            const data = {
                name: document.querySelector('#username').value,
                gender: document.querySelector('#gender').value,
                major: document.querySelector('#major').value
            };

            axios({
                method: 'post',
                url:'/user/register',
                data
            }).then((res) => {
                console.log('res: ', res);
                if( res.data.result) {
                    document.location.reload();
                }
            });
        }





    </script>
</body>
</html>