<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    </head>
    <body>
        <h3>회원조회 페이지</h3>
        <form name="member-form">
            <input type="text" id="userid" readonly /><br />
            <input type="password" id="pw" placeholder="비밀번호" /><br />
            <input type="text" id="name" placeholder="이름" /><br />
            <button type="button" onclick="updateFunc()">수정</button>
            <button type="button" onclick="deleteFunc()">삭제</button>
            <input type="hidden" id="id" />
        </form>
        <script>
            console.log(document.location.pathname);
            const [_, pathname] = document.location.pathname.split('profile/');
            console.log(pathname);

            (async function () {
                const result = await axios({
                    method: 'get',
                    url: `/api/user/info/${pathname}`,
                });
                console.log(result);
                const { userid, pw, name, id } = result.data.info;
                document.querySelector('#userid').value = userid;
                document.querySelector('#pw').value = pw;
                document.querySelector('#name').value = name;
                document.querySelector('#id').value = id;
            })();

            function updateFunc() {
                const form = document.forms['member-form'];
                const data = {
                    id: Number(form.id.value),
                    pw: form.pw.value,
                    name: form.name.value,
                };
                axios({
                    method: 'patch',
                    url: '/api/user/update',
                    data,
                }).then((res) => {
                    alert('회원정보가 수정되었습니다');
                    document.location.reload();
                });
            }
            function deleteFunc() {
                if (!confirm('탈퇴하시겠습니까?')) {
                    return;
                }
                axios({
                    method: 'delete',
                    url: '/api/user/delete',
                    data: {
                        id: Number(document.querySelector('#id').value),
                    },
                }).then((res) => {
                    alert('탈퇴가 완료되었습니다');
                    document.location.href = '/';
                });
            }
        </script>
    </body>
</html>
